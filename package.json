{
  "name": "arrow_1",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint app components lib",
    "lint:fix": "eslint app components lib --fix",
    "format": "prettier --write app components lib __tests__ e2e .github README.md AGENTS.md jest.config.js jest.setup.ts playwright.config.ts *.json *.mjs *.ts",
    "format:check": "prettier --check app components lib __tests__ e2e .github README.md AGENTS.md jest.config.js jest.setup.ts playwright.config.ts *.json *.mjs *.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "fix": "npm run format && npm run lint:fix",
    "check": "npm run format:check && npm run lint && npm run test:ci && next build --webpack",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,json,css,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix"
    ],
    "*.py": [
      "bash -lc 'source backend/.venv/bin/activate && ruff check --fix --config backend/pyproject.toml \"$@\"' _",
      "bash -lc 'source backend/.venv/bin/activate && ruff format --config backend/pyproject.toml \"$@\"' _"
    ]
  }
}
